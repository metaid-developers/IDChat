{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "lib": ["esnext", "dom"],
    "typeRoots": ["./node_modules/@types", "./src/types"], // 自定义类型路径
    "types": [
      "vite/client",
      "node",
      "@intlify/vite-plugin-vue-i18n/client",
      "vite-plugin-pwa/client",
      "global"
    ],
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "node_modules/element-plus/global.d.ts",
    "global.d.ts"
  ],
  "exclude": ["node_modules", "dist", "public", "tests"]
}
